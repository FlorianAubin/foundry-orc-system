<table style="width: 200px">
  <th class="new-day button fas fa-calendar-days" align="center">
    {{localize "orc.newDay"}}
  </th>
</table>
<table style="width: 200px">
  <th></th>
  <th>{{localize "orc.effective"}}</th>
  <th>{{localize "orc.max"}}</th>
  <tr>
    <th>{{localize "orc.character.hp"}}</th>
    <td align="center">
      <input
        type="number"
        name="system.hp.value"
        value="{{actor.system.hp.value}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 40px"
      />
    </td>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.hp.valueMaxNative"
          value="{{actor.system.hp.valueMaxNative}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      {{else}}
        {{#if (eq actor.system.hp.value actor.system.hp.surplus)}}
          <span align="center" class="button fas fa-skull-crossbones"></span>
        {{else}}
          {{#if (isLowerThan actor.system.hp.value 1)}}
            <span align="center" class="button fas fa-face-dizzy"></span>
          {{/if}}
        {{/if}}
        <span>{{actor.system.hp.valueMax}}</span>
      {{/if}}
    </td>
  </tr>
  {{#if (or unlocked actor.system.mp.valueMaxNative)}}
  <tr>
    <th>{{localize "orc.character.mp"}}</th>
    <td align="center">
      <input
        type="number"
        name="system.mp.value"
        value="{{actor.system.mp.value}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 40px"
      />
    </td>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.mp.valueMaxNative"
          value="{{actor.system.mp.valueMaxNative}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      {{else}}
        <span>{{actor.system.mp.valueMax}}</span>
      {{/if}}
    </td>
  </tr>
  {{/if}}
    <th></th>
    {{#if unlocked}}
      <th>{{localize "orc.native"}}</th>
    {{else}}
      <th>{{localize "orc.effective"}}</th>
    {{/if}}
    <th></th>
  <tr>
    <th>{{localize "orc.character.ap"}}</th>
    {{#if unlocked}}
      <td align="center">
        <input
          type="number"
          name="system.ap.native"
          value="{{actor.system.ap.native}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      </td>
    {{else}}
      <td align="center">
        <span>{{actor.system.ap.value}}</span>
      </td>
    {{/if}}
    {{#if (not actor.system.ap.optionDeploy)}}
      <td
        class="ap-deploy button fas fa-arrow-down-short-wide"
        align="center"
        style="width: 25px"
      ></td>
    {{else}}
      <td 
        class="ap-deploy button fas fa-arrow-up-to-line" 
        align="center"
        style="width: 25px"
      ></td>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.head}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.head)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />    
            </td>
          {{/if}}
        {{/each}}
      </tr>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.chest}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.chest)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />     
            </td>
          {{/if}}
        {{/each}}
      </tr>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.arms}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.arms)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />     
            </td>
          {{/if}}
        {{/each}}
      </tr>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.legs}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.legs)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />     
            </td>
          {{/if}}
        {{/each}}
      </tr>
    {{/if}}
  </tr>
</table>
<table style="width: 200px">
  <tr>
    <th>{{localize "orc.character.combatStyle"}}</th>
    <td align="center" colspan="2">
      <select name="system.combatStyle" align="center">
        {{#select actor.system.combatStyle}}
          {{#each config.combatStyleList as |combatstyle style|}}
            <option value="{{style}}">{{localize combatstyle}}</option>
          {{/each}}
        {{/select}}
      </select>
    </td>
  </tr>
  <tr align="center">
    <th>{{localize "orc.character.attack"}}</th>
    <td>{{actor.system.attack.value}}</td>
    <td
      class="attack-roll button fas fa-dice"
      data-attributename="{{localize 'orc.character.attack'}}"
      data-attributevalue="{{actor.system.attack.value}}"
      data-attributevaluebase="{{actor.system.attack.native}}"
    ></td>
  </tr>
  {{#if actor.system.magic.canLaunchSpell}}
  <tr align="center">
    <th>{{localize "orc.character.magicRoll"}}</th>
    <td>{{actor.system.magic.roll.value}}</td>
    <td
      class="launch-spell-roll button fas fa-dice"
      data-attributename="{{localize 'orc.character.magicRoll'}}"
      data-attributevalue="{{actor.system.magic.roll.value}}"
      data-attributevaluebase="{{actor.system.magic.roll.native}}"
    ></td>
  </tr>
  {{/if}}
  {{#if actor.system.defence.value}}
    <tr align="center">
      <th>{{localize "orc.character.defence"}}</th>
      <td class="defence" colspan="2">{{actor.system.defence.value}}</td>
    </tr>
  {{/if}}
  {{#if actor.system.dodge.enable}}
    <tr align="center">
      <th>{{localize "orc.character.dodge"}}</th>
      <td>{{actor.system.dodge.value}}</td>
      <td
        class="dodge-roll button fas fa-dice"
        data-attributename="{{localize 'orc.character.dodge'}}"
        data-attributevalue="{{actor.system.dodge.value}}"
        data-attributevaluebase="{{actor.system.dodge.native}}"
      ></td>
    </tr>
  {{/if}}
  {{#if actor.system.damageBonus.value}}
    <tr align="center">
      <th>{{localize "orc.character.damageBonus"}}</th>
      <td>{{actor.system.damageBonus.value}}</td>
      <td class="damage-roll button fas fa-dice"></td>
    </tr>
  {{/if}}
  <tr align="center">
    <th>{{localize "orc.character.initiative"}}</th>
    {{#if unlocked}}
      <td align="center" colspan="2">
        <input
          type="number"
          name="system.initiativeNative"
          value="{{actor.system.initiativeNative}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      </td>
    {{else}}
      <td align="center">
        <span>2d10 + {{actor.system.initiative}}</span>
      </td>
    {{/if}}
  </tr>
</table>
<table style="width: 200px">
  <th></th>
  {{#if
    (or
      actor.system.status.bleed
      actor.system.status.poison
      actor.system.status.onfire
    )
  }}
    <th>{{localize "orc.cure"}}</th>
  {{else}}
    <th></th>
  {{/if}}
  <th>{{localize "orc.stack"}}</th>
  {{#if
    (or
      actor.system.status.bleed
      actor.system.status.poison
      actor.system.status.burn
      actor.system.status.onfire
    )
  }}
    <th>{{localize "orc.effect"}}</th>
  {{else}}
    <th></th>
  {{/if}}
  <tr>
    <th>{{localize "orc.character.bleed"}}</th>
    {{#if actor.system.status.bleed}}
      <td class="bleed-off button fas fa-bandage" align="center"></td>
    {{else}}
      <td></td>
    {{/if}}
    <td align="center">
      <input
        type="number"
        name="system.status.bleed"
        value="{{actor.system.status.bleed}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if actor.system.status.bleed}}
      <td
        class="bleed-roll button fas fa-droplet"
        data-type="bleed"
        align="center"
      ></td>
    {{/if}}
  </tr>
  <tr>
    <th>{{localize "orc.character.poison"}}</th>
    {{#if actor.system.status.poison}}
      <td
        class="poison-off button fas fa-flask-round-potion"
        align="center"
      ></td>
    {{else}}
      <td></td>
    {{/if}}
    <td align="center">
      <input
        type="number"
        name="system.status.poison"
        value="{{actor.system.status.poison}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if actor.system.status.poison}}
      <td
        class="poison-roll button fas fa-flask-round-poison"
        data-type="poison"
        align="center"
      ></td>
    {{/if}}
  </tr>
  <tr>
    <th>{{localize "orc.character.burn"}}</th>
    {{#if actor.system.status.onfire}}
      <td class="burn-off button fas fa-fire-extinguisher" align="center"></td>
    {{else}}
      <td></td>
    {{/if}}
    <td align="center">
      <input
        type="number"
        name="system.status.burn"
        value="{{actor.system.status.burn}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if actor.system.status.burn}}
      {{#if actor.system.status.onfire}}
        <td class="burn-damage button fas fa-fire" align="center"></td>
      {{else}}
        <td class="burn-roll button fas fa-dice" align="center"></td>

      {{/if}}
    {{/if}}
  </tr>
</table>
<table style="width: 200px">
  <tr>
    <th colspan="2"></th>
    {{#if unlocked}}
      <th colspan="2">{{localize "orc.multiplier"}}</th>
    {{else}}
      <th>{{localize "orc.effective"}}</th>
      <th>{{localize "orc.max"}}</th>
    {{/if}}
  </tr>
  <tr>
    <th colspan="2">{{localize "orc.character.encumbrance"}}</th>
    {{#if unlocked}}
      <td align="center" colspan="2">
        <input
          type="number"
          name="system.encumbrance.limitMultiplier"
          value="{{actor.system.encumbrance.limitMultiplier}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      </td>
    {{else}}
      <td align="center">
        <span>{{actor.system.encumbrance.value}}</span>
      </td>
      <td align="center">
        <span>{{actor.system.encumbrance.limit}}</span>
      </td>
    {{/if}}
  </tr>
  <tr>
    <th colspan="2"></th>
    <th>{{localize "orc.day"}}</th>
    <th>{{localize "orc.needed"}}</th>
  </tr>
  <tr>
    <th colspan="2">{{localize "orc.character.food"}}</th>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.nutrition.foodDay"
          value="{{actor.system.nutrition.foodDay}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      {{else}}
        <span>{{actor.system.nutrition.foodDay}}</span>
      {{/if}}
    </td>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.nutrition.foodNeededDay.native"
          value="{{actor.system.nutrition.foodNeededDay.native}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      {{else}}
        <span>{{actor.system.nutrition.foodNeededDay.value}}</span>
      {{/if}}
    </td>
  </tr>
  <tr>
    <th colspan="2">{{localize "orc.character.drink"}}</th>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.nutrition.drinkDay"
          value="{{actor.system.nutrition.drinkDay}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      {{else}}
        <span>{{actor.system.nutrition.drinkDay}}</span>
      {{/if}}
    </td>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.nutrition.drinkNeededDay.native"
          value="{{actor.system.nutrition.drinkNeededDay.native}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      {{else}}
        <span>{{actor.system.nutrition.drinkNeededDay.value}}</span>
      {{/if}}
    </td>
  </tr>
  <tr>
    <th colspan="2">{{localize "orc.character.tipsiness"}}</th>
    <td align="center">
      <input
        type="number"
        name="system.nutrition.tipsiness"
        value="{{actor.system.nutrition.tipsiness}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if (not actor.system.nutrition.optionDeploy)}}
      <td
        class="nutrition-deploy button fas fa-arrow-down-short-wide"
        align="center"
        style="width: 25px"
      ></td>
    {{else}}
      <td 
        class="nutrition-deploy button fas fa-arrow-up-to-line" 
        align="center"
        style="width: 25px"
      ></td>
      {{#each foods as |food|}}
        {{#if food.system.stock}}
          <tr class="item" data-item-id="{{food._id}}">
            <td colspan="2" align="center">{{food.name}}</td>
            <td></td>
            <td class="content item-consume button fas fa-meat"></td>
          </tr>
        {{/if}}
      {{/each}}
    {{/if}}
  </tr>
</table>