<table style="width: 200px">
  <th class="new-day button fas fa-calendar-days" align="center">
    {{localize "orc.newDay"}}
  </th>
</table>
<table style="width: 200px">
  <th></th>
  <th>{{localize "orc.effective"}}</th>
  <th>{{localize "orc.max"}}</th>
  <tr>
    <th>{{localize "orc.character.hp"}}</th>
    <td align="center">
      <input
        type="number"
        name="system.hp.value"
        value="{{actor.system.hp.value}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 40px"
      />
    </td>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.hp.valueMaxNative"
          value="{{actor.system.hp.valueMaxNative}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      {{else}}
        {{#if (eq actor.system.hp.value actor.system.hp.surplus)}}
          <span align="center" class="button fas fa-skull-crossbones"></span>
        {{else}}
          {{#if (isLowerThan actor.system.hp.value 1)}}
            <span align="center" class="button fas fa-face-dizzy"></span>
          {{/if}}
        {{/if}}
        <span>{{actor.system.hp.valueMax}}</span>
      {{/if}}
    </td>
  </tr>
  {{#if (or unlocked actor.system.mp.valueMaxNative)}}
  <tr>
    <th>{{localize "orc.character.mp"}}</th>
    <td align="center">
      <input
        type="number"
        name="system.mp.value"
        value="{{actor.system.mp.value}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 40px"
      />
    </td>
    <td align="center">
      {{#if unlocked}}
        <input
          type="number"
          name="system.mp.valueMaxNative"
          value="{{actor.system.mp.valueMaxNative}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      {{else}}
        <span>{{actor.system.mp.valueMax}}</span>
      {{/if}}
    </td>
  </tr>
  {{/if}}
    <th></th>
    {{#if unlocked}}
      <th>{{localize "orc.native"}}</th>
    {{else}}
      <th>{{localize "orc.effective"}}</th>
    {{/if}}
    <th></th>
  <tr>
    <th>{{localize "orc.character.ap"}}</th>
    {{#if unlocked}}
      <td align="center">
        <input
          type="number"
          name="system.ap.native"
          value="{{actor.system.ap.native}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      </td>
    {{else}}
      <td align="center">
        <span>{{actor.system.ap.value}}</span>
      </td>
    {{/if}}
    {{#if (not actor.system.ap.optionDeploy)}}
      <td
        class="ap-deploy button fas fa-arrow-down-short-wide"
        align="center"
        style="width: 25px"
      ></td>
    {{else}}
      <td 
        class="ap-deploy button fas fa-arrow-up-to-line" 
        align="center"
        style="width: 25px"
      ></td>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.head}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.head)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />    
            </td>
          {{/if}}
        {{/each}}
      </tr>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.chest}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.chest)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />     
            </td>
          {{/if}}
        {{/each}}
      </tr>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.arms}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.arms)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />     
            </td>
          {{/if}}
        {{/each}}
      </tr>
      <tr>
        <td align="center" class="equipped-armor-bodypart">{{localize config.bodyPartList.legs}}</td>
        {{#each armors as |armor|}}
          {{#if (eq armor._id ../actor.system.ap.bodyParts.legs)}}
            <td align="center" class="equipped-armor">{{armor.name}}</td>
            <td align="center" class="item flexrow" data-item-id="{{armor._id}}">
              <input
                class="armor-update-ap"
                type="number"
                name="armor.system.ap"
                value="{{armor.system.ap}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 25px"
              />     
            </td>
          {{/if}}
        {{/each}}
      </tr>
    {{/if}}
  </tr>
</table>
<table style="width: 200px">
  <tr>
    <th >{{localize "orc.character.combatStyle"}}</th>
    <td align="center" colspan="2">
      <select name="system.combatStyle.style" align="center">
        {{#select actor.system.combatStyle.style}}
          {{#each config.combatStyleList as |combatstyle style|}}
            <option value="{{style}}">{{localize combatstyle}}</option>
          {{/each}}
        {{/select}}
      </select>
    </td>
  </tr>
  <tr align="center">
    {{#if actor.system.modifiers.deploy}}
      <th>{{localize "orc.character.attack"}}</th>
      <td align="center">
        <input
          type="number"
          name="system.modifiers.attack"
          value="{{actor.system.modifiers.attack}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      </td>
    {{else}}
      {{#if actor.system.modifiers.attack}}
        <th>{{localize "orc.character.attack"}}</th>
        <td>+ {{actor.system.modifiers.attack}}</td>
      {{/if}}
    {{/if}}
  </tr>

  <tr align="center">
    {{#if actor.system.modifiers.deploy}}
      <th>{{localize "orc.character.magicRoll"}}</th>
      <td align="center">
        <input
          type="number"
          name="system.modifiers.magicRoll"
          value="{{actor.system.modifiers.magicRoll}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      </td>
    {{else}}
      {{#if actor.system.modifiers.magicRoll}}
        <th>{{localize "orc.character.magicRoll"}}</th>
        <td colspan="3">+ {{actor.system.modifiers.magicRoll}}</td>
      {{/if}}
    {{/if}}
  </tr>

  <tr align="center">
    {{#if actor.system.modifiers.deploy}}
      <th>{{localize "orc.character.magicRoll"}} : {{localize "orc.character.attribute"}}</th>      
      {{#if unlocked}}
      <td align="center">
        <select name="system.magic.roll.attribut" align="center">
          {{#select actor.system.magic.roll.attribut}}
            <option value=""></option>
            {{#each config.attributes as |attribut|}}
              <option
                value="{{attribut}}"
              >{{localize attribut}}</option>
            {{/each}}
          {{/select}}
        </select>
      </td>
      {{else}}
        <td align="center">
          {{localize actor.system.magic.roll.attribut}}
        </td>
      {{/if}}
    {{/if}}
  </tr>

  <tr align="center">
    <th>{{localize "orc.character.defence"}}</th>
    {{#if actor.system.modifiers.deploy}}
      <td align="center">
        <input
          type="number"
          name="system.modifiers.defence"
          value="{{actor.system.modifiers.defence}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      </td>
    {{else}}
      <td class="defence" colspan="3">{{actor.system.defence.value}}</td>
    {{/if}}
  </tr>
    
  {{#if actor.system.dodge.enable}}
    <tr align="center">
      <th>{{localize "orc.character.dodge"}}</th>
      <td>{{actor.system.dodge.value}}</td>
      <td
        class="dodge-roll button fas fa-dice"
        data-attributename="{{localize 'orc.character.dodge'}}"
        data-attributevalue="{{actor.system.dodge.value}}"
        data-attributevaluebase="{{actor.system.dodge.native}}"
      ></td>
      {{#if actor.system.modifiers.deploy}}
        <td align="center">
          <input
            type="number"
            name="system.modifiers.dodge"
            value="{{actor.system.modifiers.dodge}}"
            placeholder="0"
            onClick="this.select();"
            style="width: 30px"
          />
        </td>
      {{/if}}
    </tr>
  {{/if}}

  {{#if (or actor.system.modifiers.deploy (isZeroOrEmptyString actor.system.modifiers.damageBonus))}}
    <tr align="center">
      <th>{{localize "orc.character.damageBonus"}}</th>
        {{#if actor.system.modifiers.deploy}}
          <td align="center">
            <input
              type="text"
              name="system.modifiers.damageBonus"
              value="{{actor.system.modifiers.damageBonus}}"
              placeholder="0"
              onClick="this.select();"
              style="width: 30px"
            />
        </td>
        {{else}}
          <td>{{actor.system.damageBonus.value}}</td>
        {{/if}}
    </tr>
  {{/if}}
  
  {{#if (or actor.system.modifiers.deploy (isZeroOrEmptyString actor.system.modifiers.powerBonus))}}
    <tr align="center">
      <th>{{localize "orc.character.magicPower"}}</th>
      {{#if actor.system.modifiers.deploy}}
        <td align="center">
          <input
            type="text"
            name="system.modifiers.powerBonus"
            value="{{actor.system.modifiers.powerBonus}}"
            placeholder="0"
            onClick="this.select();"
            style="width: 30px"
          />
        </td>
      {{else}}
        <td>{{actor.system.modifiers.powerBonus}}</td>
      {{/if}}
    </tr>
  {{/if}}

  <tr align="center">
    <th>{{localize "orc.character.initiative"}}</th>
    {{#if actor.system.modifiers.deploy}}
      <td align="center">
        <input
          type="number"
          name="system.modifiers.initiative"
          value="{{actor.system.modifiers.initiative}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 30px"
        />
      </td>
    {{else}}
      <td align="center">
        {{#if unlocked}}
          <input
            type="number"
            name="system.ini.flatNative"
            value="{{actor.system.ini.flatNative}}"
            placeholder="0"
            onClick="this.select();"
            style="width: 30px"
          />
        {{else}}
          <span>{{actor.system.ini.ndice}}d{{actor.system.ini.dice}} + {{actor.system.ini.flat}} </span>
        {{/if}}
      </td>
    {{/if}}
  </tr>

  <tr align="center">
    {{#if actor.system.modifiers.deploy}}
      <td class="modifier-deploy button fas fa-arrow-up-to-line" colspan="5"></td>
    {{else}}
      <td class="modifier-deploy button fas fa-arrow-down-short-wide" colspan="5"></td>
    {{/if}}
  </tr>
</table>

<table style="width: 200px">
  <th></th>
  {{#if unlocked}}
    <th>{{localize "orc.resistance"}}</th>
  {{else}}
    {{#if
      (or
        actor.system.status.bleed
        actor.system.status.poison
        actor.system.status.onfire
      )
    }}
      <th>{{localize "orc.cure"}}</th>
    {{else}}
      <th></th>
    {{/if}}
  {{/if}}
  <th>{{localize "orc.stack"}}</th>
  {{#if unlocked}}
    <th>{{localize "orc.vulnerability"}}</th>
  {{else}}
    {{#if
      (or
        actor.system.status.bleed
        actor.system.status.poison
        actor.system.status.onfire
      )
    }}
      <th>{{localize "orc.effect"}}</th>
    {{else}}
      <th></th>
    {{/if}}
  {{/if}}
  <tr>
    <th>{{localize "orc.character.bleed"}}</th>
    {{#if unlocked}}
      <td align="center">
        <input
          name="system.resistances.bleed"
          type="checkbox"
          {{checked actor.system.resistances.bleed}}
        />
      </td>
    {{else}}
      {{#if actor.system.status.bleed}}
        <td class="bleed-off button fas fa-bandage" align="center"></td>
      {{else}}
        <td></td>
      {{/if}}
    {{/if}}
    <td align="center">
      <input
        type="number"
        name="system.status.bleed"
        value="{{actor.system.status.bleed}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if unlocked}}
      <td align="center">
        <input
          name="system.vulnerabilities.bleed"
          type="checkbox"
          {{checked actor.system.vulnerabilities.bleed}}
        />
      </td>
    {{else}}
      {{#if actor.system.status.bleed}}
        <td
          class="bleed-roll button fas fa-droplet"
          data-type="bleed"
          align="center"
        ></td>
      {{/if}}
    {{/if}}
  </tr>
  <tr>
    <th>{{localize "orc.character.poison"}}</th>
    {{#if unlocked}}
      <td align="center">
        <input
          name="system.resistances.poison"
          type="checkbox"
          {{checked actor.system.resistances.poison}}
        />
      </td>
    {{else}}
      {{#if actor.system.status.poison}}
        <td
          class="poison-off button fas fa-flask-round-potion"
          align="center"
        ></td>
      {{else}}
        <td></td>
      {{/if}}
    {{/if}}
    <td align="center">
      <input
        type="number"
        name="system.status.poison"
        value="{{actor.system.status.poison}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if unlocked}}
      <td align="center">
        <input
          name="system.vulnerabilities.poison"
          type="checkbox"
          {{checked actor.system.vulnerabilities.poison}}
        />
      </td>
    {{else}}
      {{#if actor.system.status.poison}}      
        <td
          class="poison-roll button fas fa-flask-round-poison"
          data-type="poison"
          align="center"
        ><span style="font-family: 'Times', monospace; font-size: 12px;"> -{{actor.system.status.poisonDamage}} HP</span></td>
      {{/if}}
    {{/if}}
  </tr>
  <tr>
    <th>{{localize "orc.character.burn"}}</th>
    {{#if unlocked}}
      <td align="center">
        <input
          name="system.resistances.fire"
          type="checkbox"
          {{checked actor.system.resistances.fire}}
        />
      </td>
    {{else}}
      {{#if actor.system.status.onfire}}
        <td class="burn-off button fas fa-fire-extinguisher" align="center"></td>
      {{else}}
        <td></td>
      {{/if}}
    {{/if}}
    <td align="center">
      <input
        type="number"
        name="system.status.burn"
        value="{{actor.system.status.burn}}"
        placeholder="0"
        onClick="this.select();"
        style="width: 30px"
      />
    </td>
    {{#if unlocked}}
      <td align="center">
        <input
          name="system.vulnerabilities.fire"
          type="checkbox"
          {{checked actor.system.vulnerabilities.fire}}
        />
      </td>
    {{else}}
      {{#if actor.system.status.burn}}
        {{#if actor.system.status.onfire}}
          <td class="burn-damage button fas fa-fire" align="center"></td>
        {{else}}
          <td class="burn-roll button fas fa-dice" align="center"></td>
        {{/if}}
      {{/if}}
    {{/if}}
  </tr>
</table>

<table style="width: 200px">
  <tr>
    <th colspan="2"></th>
    {{#if unlocked}}
      <th colspan="2">{{localize "orc.multiplier"}}</th>
    {{else}}
      <th>{{localize "orc.effective"}}</th>
      <th>{{localize "orc.max"}}</th>
    {{/if}}
  </tr>
  <tr>
    <th colspan="2">{{localize "orc.character.encumbrance"}}</th>
    {{#if unlocked}}
      <td align="center" colspan="2">
        <input
          type="number"
          name="system.encumbrance.limitMultiplier"
          value="{{actor.system.encumbrance.limitMultiplier}}"
          placeholder="0"
          onClick="this.select();"
          style="width: 40px"
        />
      </td>
    {{else}}
      <td align="center">
        <span>{{actor.system.encumbrance.value}}</span>
      </td>
