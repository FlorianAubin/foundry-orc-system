<div class="global">
  <table class="global-table">
    <tr class="column-container flexrow">
      <td class="table-container">
        <table class="take-damage-table">
          <tr><th colspan="7">{{localize "orc.takeDamage"}}</th></tr>
          <tr class="take-damage-row">
            <td class="choice">{{localize "orc.damage"}}</td>
            {{#if actor.system.takeDamage.applyArmor}}
              <td class="choice" colspan="2">{{localize "orc.character.ap"}}?</td>
            {{else}}
              <td class="choice">{{localize "orc.character.ap"}}?</td>
              <td class="choice">{{localize "orc.character.ap"}} {{localize "orc.native"}}?</td>
            {{/if}}
            <td class="choice">{{localize "orc.character.mp"}}?</td>
            <td class="choice">{{localize "orc.resistance"}}?</td>
            <td class="choice">{{localize "orc.vulnerability"}}?</td>
            <td class="choice"></td>
          </tr>
          <tr class="take-damage-row">
            <td class="choice">
              <input
                type="text"
                name="system.takeDamage.damage"
                value="{{actor.system.takeDamage.damage}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 40px"
              />
            </td>
            {{#if actor.system.takeDamage.applyArmor}}
              <td class="choice" colspan="2">
                <input
                  name="system.takeDamage.applyArmor"
                  type="checkbox"
                  {{checked actor.system.takeDamage.applyArmor}}
                />
              </td>
            {{else}}
              <td class="choice">
                <input
                  name="system.takeDamage.applyArmor"
                  type="checkbox"
                  {{checked actor.system.takeDamage.applyArmor}}
                />
              </td>
              <td class="choice">
                <input
                  name="system.takeDamage.applyNativeArmor"
                  type="checkbox"
                  {{checked actor.system.takeDamage.applyNativeArmor}}
                />
              </td>
            {{/if}}
            <td class="choice">
              <input
                name="system.takeDamage.onMP"
                type="checkbox"
                {{checked actor.system.takeDamage.onMP}}
              />
            </td>
            <td class="choice">
              <input
                name="system.resistances.general"
                type="checkbox"
                {{checked actor.system.resistances.general}}
              />
            </td>
            <td class="choice">
              <input
                name="system.vulnerabilities.general"
                type="checkbox"
                {{checked actor.system.vulnerabilities.general}}
              />
            </td>
            <td
              class="choice button take-damage fas fa-heart-crack"
              data-damage="{{actor.system.takeDamage.damage}}"
              data-applyarmor="{{actor.system.takeDamage.applyArmor}}"
              data-applynativearmor="{{actor.system.takeDamage.applyNativeArmor}}"
              data-onmp="{{actor.system.takeDamage.onMP}}"
              align="center"
            ></td>
          </tr>
        </table>
      </td>
      {{#if (not (eq actor.system.ap.native actor.system.ap.value))}}
      <td class="table-container">
        <table class="take-damage-table">
          <tr><th colspan="3">{{localize "orc.takeDamageOnArmor"}}</th></tr>
          <tr class="take-damage-row">
            <td class="choice">{{localize "orc.damage"}}</td>
            <td class="choice">{{localize "orc.armorPiece"}}</td>
            <td class="choice"></td>
          </tr>
          <tr class="take-damage-row">
            <td class="choice">
              <input
                type="text"
                name="system.takeDamageArmor.damage"
                value="{{actor.system.takeDamageArmor.damage}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 40px"
              />
            </td>
            <td class="choice">
              <select
                class=""
                name="system.takeDamageArmor.armorId"
                align="center"
              >
              {{#select actor.system.takeDamageArmor.armorId}}
                  <option value=""></option>
                  {{#each armors as |armor|}}
                    {{#if armor.system.equipped}}
                      <option value="{{armor._id}}">{{armor.name}}</option>
                    {{/if}}
                  {{/each}}
                {{/select}}
              </select>
            </td>
            <td
              class="choice button take-damage-armor fas fa-shield-slash"
              data-damage="{{actor.system.takeDamageArmor.damage}}"
              data-armorid="{{actor.system.takeDamageArmor.armorId}}"
              align="center"
            ></td>
          </tr>
        </table>
      </td>
      {{/if}}
      <td class="table-container">
        <table class="heal-table">
          <tr><th colspan="3">{{localize "orc.recoverHP"}}</th></tr>
          <tr class="heal-hp-row">
            <td class="choice">{{localize "orc.character.hp"}}</td>
            <td class="choice">{{localize "orc.multiplier"}}</td>
            <td class="choice"></td>
          </tr>
          <tr class="heal-hp-row">
            <td class="choice">
              <input
                type="text"
                name="system.recoverHP.heal"
                value="{{actor.system.recoverHP.heal}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 40px"
              />
            </td>
            {{#if unlocked}}
              <td class="choice">
                <input
                  type="number"
                  name="system.recoverHP.multiplier.native"
                  value="{{actor.system.recoverHP.multiplier.native}}"
                  placeholder="0"
                  onClick="this.select();"
                  style="width: 40px"
                />
              </td>
            {{else}}
              <td
                class="choice"
              >{{actor.system.recoverHP.multiplier.value}}</td>
            {{/if}}
            <td
              class="choice button recover-hp fas fa-medkit"
              data-heal="{{actor.system.recoverHP.heal}}"
              data-multiplier="{{actor.system.recoverHP.multiplier.value}}"
              align="center"
            ></td>
          </tr>
        </table>
      </td>
      {{#if actor.system.mp.valueMaxNative}}
      <td class="table-container">
        <table class="heal-table">
          <tr><th colspan="2">{{localize "orc.recoverMP"}}</th></tr>
          <tr class="heal-mp-row">
            <td class="choice">{{localize "orc.character.mp"}}</td>
            <td class="choice"></td>
          </tr>
          <tr class="heal-mp-row">
            <td class="choice">
              <input
                type="text"
                name="system.recoverMP.heal"
                value="{{actor.system.recoverMP.heal}}"
                placeholder="0"
                onClick="this.select();"
                style="width: 40px"
              />
            </td>
            <td
              class="choice button recover-mp fas fa-sparkles"
              data-heal="{{actor.system.recoverMP.heal}}"
              align="center"
            ></td>
          </tr>
        </table>
      </td>
      {{/if}}
    </tr>
  </table>


  <table class="item-list weapon-list">
    <tr class="main-header flexrow">
      <th class="content">{{localize "orc.weaponsEquipped"}}</th>
    </tr>
    <tr class="header flexrow">
      <th></th>
      <th class="content">{{localize "orc.weapon.ammo"}}</th>
      <th class="content">{{localize "orc.weapon.damage"}}</th>
      <th class="content">{{localize "orc.weapon.range"}}</th>
      <th class="effect-list">{{localize "orc.weapon.effect"}}</th>
      <th class="content">{{localize "orc.character.attack"}}</th>
    </tr>
    {{#each weapons as |weapon id|}}
      {{#if weapon.system.equipped}}
        <tr class="item flexrow" data-item-id="{{weapon._id}}">
          <td class="content">
            <img
              src="{{weapon.img}}"
              data-edit="img"
              title="{{weapon.name}}"
              height="24"
              width="24"
            />
            <div>{{weapon.name}}</div>
          </td>
          <td class="content">
            {{#if weapon.system.useAmmo}}
              <select class="weapon-choose-ammo" name="system.ammo" align="center">
              {{#select weapon.system.ammo}} 
                <option value=""></option>
                {{#each ../ammos as |ammo|}}
                  <option value="{{ammo._id}}">{{ammo.name}}</option>
                {{/each}} 
              {{/select}}
            </select>
            {{/if}}
          </td>
          <td class="content">{{weapon.system.effective.damage}}</td>
          <td class="content">{{weapon.system.range}}</td>
          <td class="effect-list">{{weapon.system.effective.effect}}</td>
          <td class="content">
            <div>
              <select class="weapon-choose-attribute" name="system.effective.attribut" align="center">
                {{#select weapon.system.effective.attribut}}
                  <option value=""></option>
                  {{#each system.attributes as |attribut id|}}
                    {{#if attribut.usable}}
                      <option value="{{attribut.name}}">
                        {{localize attribut.name}}
                      </option>
                    {{/if}}
                  {{/each}}
                {{/select}}
              </select>
            </div>
            <div align="center">
              <span class="attack-with-weapon-roll button fas fa-dice"
                  data-attributename="{{localize 'orc.character.attack'}}"
                  data-attributevalue="{{weapon.system.effective.attack}}"
                  data-attributevaluebase="{{../actor.system.attack.native}}"
                  data-weaponid="{{weapon._id}}">
                  {{weapon.system.effective.attack}}
              </span>
            </div>
          </td>
        </tr>
      {{/if}}
    {{/each}}
  </table>



  <table class="item-list spell-list">
    <tr class="header flexrow">
      <th class="content" colspan="2">{{localize "orc.character.magicRoll"}}</th>
      <th class="content"></th>   
      <th class="content"></th>   
      <th class="content"></th>   
      <th class="content"></th>   
      <td align="center">
        {{#if actor.system.modifiers.deploy}}
          <span class="modifier-deploy button fas fa-arrow-up-to-line" colspan="5"></span>
        {{else}}
          <span class="modifier-deploy button fas fa-arrow-down-short-wide" colspan="5"></span>
        {{/if}}
      </td>
    </tr>
    <tr class="header flexrow">
      <th class="content">{{localize "orc.spell.difficulty"}}</th>
      <th class="content">{{localize "orc.spell.cost"}}</th>    
      <th class="content">{{localize "orc.spell.power"}}</th>
      <th class="content">{{localize "orc.spell.range"}}</th>
      <th class="content">{{localize "orc.spell.duration"}}</th>    
      <th class="effect-list">{{localize "orc.spell.effect"}}</th>
      <th class="content"></th>        
    </tr>
    <tr class="item flexrow", style="gap: 10px;">
      <td class="content">{{actor.system.magic.effective.difficulty}}</td>
      <td class="content">{{#if (isNotEmptyString actor.system.magic.effective.cost)}}{{actor.system.magic.effective.cost}}{{#if actor.system.magic.effective.costMult}} X {{actor.system.magic.effective.costMult}}{{/if}} {{#if actor.system.magic.mpReduc}} + {{actor.system.magic.mpReduc}} {{/if}} ({{#if actor.system.magic.effective.useHP}}{{localize "orc.spell.HP"}}{{else}}{{localize "orc.spell.MP"}}{{/if}}){{/if}}</td>
      <td class="content">{{#if (isNotEmptyString actor.system.magic.effective.power)}}{{actor.system.magic.effective.power}}{{#if actor.system.magic.effective.powerMult}} X {{actor.system.magic.effective.powerMult}}{{/if}} {{#if (isNotEmptyString actor.system.magic.powerModif)}} + {{actor.system.magic.powerModif}} {{/if}}{{#if actor.system.magic.effective.precise}}({{localize "orc.spell.precise"}}){{/if}}{{/if}}</td>
      <td class="content">{{actor.system.magic.effective.range}}</td>
      <td class="content">{{#if actor.system.magic.effective.duration}}{{actor.system.magic.effective.duration}} {{actor.system.magic.effective.durationUnit}}{{/if}}</td>
      <td class="effect-list">{{actor.system.magic.effective.effect}}</td>
      <td class="content">
        <span class="launch-spell-roll button fas fa-dice"
          data-attributename="{{localize 'orc.character.magicRoll'}}"
          data-attributevalue="{{actor.system.magic.roll.value}}"
          data-attributevaluebase="{{actor.system.magic.roll.native}}"
          data-attributelocalmodif="{{actor.system.magic.effective.difficulty}}">
            {{actor.system.magic.roll.formula}}
        </span>
    </tr>
    <tr class="item flexrow", style="gap: 10px;">
      <td class="content">{{#if (isNotEmptyString actor.system.magic.effective.difficulty)}}[{{actor.system.magic.effective.difficultyValues.min}}, <{{actor.system.magic.effective.difficultyValues.avg}}>, {{actor.system.magic.effective.difficultyValues.max}}]{{/if}}</td>
      <td class="content">{{#if (isNotEmptyString actor.system.magic.effective.cost)}}[{{actor.system.magic.effective.costValues.min}}, <{{actor.system.magic.effective.costValues.avg}}>, {{actor.system.magic.effective.costValues.max}}]{{/if}}</td>
      <td class="content">{{#if (isNotEmptyString actor.system.magic.effective.power)}}[{{actor.system.magic.effective.powerValues.min}}, <{{actor.system.magic.effective.powerValues.avg}}>, {{actor.system.magic.effective.powerValues.max}}]{{/if}}</td>
      <td class="content"></td>
      <td class="content">{{#if (isNotEmptyString actor.system.magic.effective.duration)}}[{{actor.system.magic.effective.durationValues.min}}, <{{actor.system.magic.effective.durationValues.avg}}>, {{actor.system.magic.effective.durationValues.max}}]{{/if}}</td>
      <td class="content"></td>
      <td class="content">[{{actor.system.magic.roll.formulaValues.min}}, <{{actor.system.magic.roll.formulaValues.avg}}>, {{actor.system.magic.roll.formulaValues.max}}]</td>
    </tr>
    {{#if actor.system.modifiers.deploy}}
      <tr class="item flexrow", style="gap: 10px;">
        <td class="content">
          <input
            name="system.magic.effective.modif.difficulty"
            type="text"
            value="{{actor.system.magic.effective.modif.difficulty}}"
            placeholder=""
          />
        </td class="content">  
        <td class="content" style="display: flex; align-items: center;">
          <input
            name="system.magic.effective.modif.cost"
            type="text"
            value="{{actor.system.magic.effective.modif.cost}}"
            placeholder=""
          />
          <input
            name="system.magic.effective.modif.costMult"
            type="number"
            value="{{actor.system.magic.effective.modif.costMult}}"
            placeholder=""
          />
        </td>  
        <td class="content" style="display: flex; align-items: center;">
          <input
            name="system.magic.effective.modif.power"
            type="text"
            value="{{actor.system.magic.effective.modif.power}}"
            placeholder=""
          />
          <input
            name="system.magic.effective.modif.powerMult"
            type="number"
            value="{{actor.system.magic.effective.modif.powerMult}}"
            placeholder=""
          />
        </td>  
        <td class="content">
          <input
            name="system.magic.effective.modif.range"
            type="number"
            value="{{actor.system.magic.effective.modif.range}}"
            placeholder=""
          />
        </td> 
        <td class="content">
          <input
            name="system.magic.effective.modif.duration"
            type="text"
            value="{{actor.system.magic.effective.modif.duration}}"
            placeholder=""
          />
        </td> 
        <td class="effect-list">
          <input
            name="system.magic.effective.modif.effect"
            type="text"
            value="{{actor.system.magic.effective.modif.effect}}"
            placeholder=""
          />
        </td>
        <td class="content"></td>           
      </tr>
    {{/if}}
    <tr class="flexrow">
      {{#each config.spellType as |type id|}}
        <td>
          <table>
              <tr class="header flexrow">
                <th class="content">
                  {{localize type}}&nbsp;&nbsp;
                  <a class="spell-add" data-type={{type}} align="center" title="Add Spell">
                    <i class="button fas fa-plus"></i>
                  </a>  &nbsp;
                  <a class="spell-remove" data-type={{type}} align="center" title="Remove Spell">
                    <i class="button fas fa-minus"></i>
                  </a>               
                  {{#each ../actor.system.magic.actives as |activeType|}}
                    {{#if (eq activeType.name type)}}
                    <span>&nbsp;&nbsp;(</span>
                      <span>
                        {{activeType.array.length}}&nbsp;/&nbsp;
                      </span>
                      {{#if ../../unlocked}}
                        <span>
                          <input
                            class="spell-increase-nmax"
                            data-type={{type}}
                            type="number"
                            name="activeType.nmax"
                            value="{{activeType.nmax}}"
                            onClick="this.select();"
                            style="width: 30px"
                          />
                        </span>
                      {{else}}
                        {{activeType.nmax}}
                      {{/if}}
                      <span>)</span>
                    {{/if}}
                  {{/each}}
                </th>
              </tr>
              {{#each ../actor.system.magic.actives as |activeType|}}
                {{#if (eq activeType.name type)}}
                  <tr class="content">
                    {{#each activeType.array as |element id|}} 
                      <tr class="item flexrow">
                        <td class="content">
                          <select class="spell-activate" name={{activeType.name}} align="center" title="Activate Spell">
                            {{#select element}}   
                              <option value=""></option>
                              {{#each ../../../spells as |spell|}}
                                {{#if (eq spell.system.type type)}}
                                  <option value="{{spell._id}}">{{spell.name}}</option>
                                {{/if}}
                              {{/each}}
                            {{/select}}
                          </select>
                        </td>
                      </td>
                    {{/each}}
                  </tr>
                {{/if}}
              {{/each}}
          </table>
        </td>
      {{/each}}
    </tr>       
  </table>

  <table class="item-list capacity-list">
    <tr class="main-header flexrow">
      <th class="content">
        {{localize "orc.capacities"}} &nbsp; &nbsp;
        <a class="item-create" data-type="capacity" align="center" title="Create Item">
          <i class="button fas fa-plus"></i>
        </a>  
      </th>
    </tr>
    <tr class="header flexrow">
      <th class="content"></th>
      <th class="content">{{localize "orc.capacity.duration"}}</th>    
      <th class="content">{{localize "orc.capacity.roll"}}</th>
      <th class="effect-list">{{localize "orc.capacity.addEffect"}}</th>    
      <th class="content">{{localize "orc.capacity.activated"}}</th>    
      <th class="content"></th>
    </tr>
    {{#each capacities as |capacity id|}}
      <tr class="item flexrow" data-item-id="{{capacity._id}}">
        <td class="content">
          <img
            src="{{capacity.img}}"
            data-edit="img"
            title="{{capacity.name}}"
            height="24"
            width="24"
          />
          <div>{{capacity.name}}</div>
        </td>
        <td class="content" style="display: flex">
          {{#if (and 
            capacity.system.activeEffect 
            (isNotEmptyString capacity.system.ifActivable.duration))}}
            {{#if capacity.system.ifActivable.activated}}
            <span>{{capacity.system.ifActivable.durationEffective}}&nbsp;{{capacity.system.ifActivable.durationUnit}}</span>&nbsp;&nbsp;&nbsp;
            <span
              class="capacity-activable-reduce-duration button fas fa-clock"
              data-itemid="{{capacity._id}}"
            ></span>  
            {{else}}
              <span>{{capacity.system.ifActivable.duration}}&nbsp;{{capacity.system.ifActivable.durationUnit}}</span>
            {{/if}}
          {{/if}}
        </td>
        {{#if capacity.system.isAttributRoll}}
          {{#each ../actor.system.attributes as |attribute a|}}
          {{#if (eq attribute.name capacity.system.attributLocal)}}
          <td
            class="content attribute-roll button fas fa-dice"
            data-attributename="{{localize attribute.name}}"
            data-attributevalue="{{attribute.value}}"
            data-attributevaluebase="{{attribute.native}}"
            data-attributelocalmodif="{{capacity.system.modifLocal}}"
            data-costmp="{{capacity.system.costMP}}"
            align="center">
            {{localize attribute.name}} {{#if (isLargerThan capacity.system.modifLocal 0)}} + {{capacity.system.modifLocal}} {{else}} {{#if (isLowerThan capacity.system.modifLocal 0)}} {{capacity.system.modifLocal}} {{/if}} {{/if}}
          </td>
          {{/if}}
          {{/each}}
        {{/if}}
        {{#if capacity.system.isAttackRoll}}
          <td class="content" align="center">
              {{#each ../weapons as |weapon id|}}
                {{#if (eq weapon._id capacity.system.weaponLocal)}}
                  <span
                    class="content attack-with-weapon-roll button fas fa-dice"
                    data-attributename="{{localize 'orc.character.attack'}}"
                    data-attributevalue="{{weapon.system.effective.attack}}"
                    data-attributevaluebase="{{../../actor.system.attack.native}}"
                    data-attributelocalmodif="{{capacity.system.modifLocal}}"
                    data-weaponid="{{weapon._id}}"
                    data-nammo="{{capacity.system.nammo}}"
                    data-costmp="{{capacity.system.costMP}}"
                    data-costmp="{{capacity.system.costMP}}"
                    style="height: 15px"
                >{{#if (isLargerThan capacity.system.modifLocal 0)}} + {{capacity.system.modifLocal}} {{else}} {{#if (isLowerThan capacity.system.modifLocal 0)}} {{capacity.system.modifLocal}} {{/if}} {{/if}}</span>
                {{/if}}
              {{/each}}
              <select class="capacity-choose-weapon" name="system.weaponLocal" align="center">
                {{#select capacity.system.weaponLocal}}
                  <option value=""></option>
                  {{#each ../weapons as |weapon|}}
                    {{#if (and weapon.system.equipped
                    (or 
                      (and capacity.system.rangeWeapon weapon.system.useAmmo) 
                      (and (not capacity.system.rangeWeapon) (not weapon.system.useAmmo)) 
                    ))}}
                      <option value="{{weapon._id}}">{{weapon.name}}</option>
                    {{/if}}
                  {{/each}}
                {{/select}}
              </select>

              {{#each ../weapons as |weapon id|}}
                {{#if (eq weapon._id capacity.system.weaponLocal)}}
                  {{#if weapon.system.useAmmo}}
                    <select class="weapon-choose-ammo" data-weaponid="{{weapon._id}}" name="system.ammo" align="center">
                      {{#select weapon.system.ammo}} 
                        <option value=""></option>
                        {{#each ../../ammos as |ammo|}}
                          <option value="{{ammo._id}}">{{ammo.name}}</option>
                        {{/each}} 
                      {{/select}}
                    </select>
                  {{/if}}
                  <select class="weapon-choose-attribute" data-weaponid="{{weapon._id}}" name="system.effective.attribut" align="center">
                    {{#select weapon.system.effective.attribut}}
                      <option value=""></option>
                      {{#each system.attributes as |attribut id|}}
                        {{#if attribut.usable}}
                          <option value="{{attribut.name}}">
                            {{localize attribut.name}}
                          </option>
                        {{/if}}
                      {{/each}}
                    {{/select}}
                  </select>
              {{/if}}
            {{/each}}


          </td>
        {{/if}}
        {{#if capacity.system.isStatusResistRoll}}
          <td
            class="capacity-status-resist-roll button fas fa-dice"
            data-costmp="{{capacity.system.costMP}}"
            align="center">
            {{localize "orc.character.attributes.strengh"}} + {{capacity.system.modifStatusResist}}
          </td>
        {{/if}}
        {{#if (and 
                (not capacity.system.isAttributRoll)
                (not capacity.system.isAttackRoll)
                (not capacity.system.isStatusResistRoll))}}
          <td></td>
        {{/if}}
        <td class="effect-list">
          <span>{{capacity.system.addEffect}}</span>
        </td>
        <td class="content" align="center">
        {{#if capacity.system.activeEffect}}
          {{#if capacity.system.ifActivable.activated}}
            <span class="content capacity-activable-deactivate button fas fa-check"
              data-itemid="{{capacity._id}}"></span>
          {{else}}
            <span class="content capacity-activable-activate button fas fa-xmark"
              data-itemid="{{capacity._id}}"></span>
          {{/if}}
        {{/if}}
        </td>
        <td class="content" align="center">
          <a class="item-edit" align="center" title="Edit Item">
            <i class="button fas fa-edit"></i></a>
          <a class="item-delete" align="center" title="Delete Item">
            <i class="button fas fa-trash"></i></a>
        </td>
      </tr>
    {{/each}}
  </table>

  <table class="item-list enchant-list">
      <tr class="main-header flexrow">
        <th class="content">{{localize "orc.enchantsActivables"}}</th>
      </tr>
      <tr class="header flexrow">
        <th class="content"></th>
