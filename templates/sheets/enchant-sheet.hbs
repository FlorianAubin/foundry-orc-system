<form class="{{cssClass}} enchant" autocomplete="off">
  <div class="name">
    <h3 class="name" align="center">
      {{#if unlocked}}
        <input
          name="system.enchant.name"
          type="text"
          value="{{item.system.enchant.name}}"
          placeholder="{{localize 'orc.name'}}"
          onClick="this.select();"
