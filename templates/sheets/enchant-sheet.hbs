          <td align="center">
            <input
              name="system.enchant.activeEffect"
              type="checkbox"
              {{checked item.system.enchant.activeEffect}}
            />
          </td>
        {{else}}
          {{#if item.system.enchant.activeEffect}}
            <td align="center">
              <span class="fas fa-check"></span>
            </td>
          {{/if}}
        {{/if}}
      </tr>
      </table>
